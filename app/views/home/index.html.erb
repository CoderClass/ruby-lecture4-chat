<div class="main" data-appearing-on="Lobby">
  <h1>Lobby</h1>
  <p>Select a room to chat</p>

  <div class="list-group" style="margin-bottom: 20px">
  <% Room.all.each do |room| %>
    <div class="list-group-item">
      <%= link_to room.name, room %>
      <span class="tag tag-primary tag-pill float-xs-right"><%= room.messages.size %></span>
    </div>
  <% end %>
  </div>

  <%= form_for Room.new do |f| %>
    <div class="form-inline">
      <%= f.text_field :name, class: 'form-control', placeholder: "Room name" %>
      <%= f.submit "Create", class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
